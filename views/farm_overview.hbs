<table class="uk-table uk-table-divider uk-table-small">
    <thead>
      <tr>
        <th>rigs</th>
        {{#each farm.coins}}
        <th>{{coin}}</th>
        {{/each}}
      </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{rigs.length}}</td>
            {{#each farm.coins}}
            <th>{{hashrate}}</th>
            {{/each}}
        </tr>
    </tbody>
</table>
<div class="uk-child-width-1-3@m uk-grid-small uk-grid-match" uk-grid>
  {{#each rigs}}
    <div>
        <div class="uk-card uk-card-small uk-card-default uk-card-body">
            <h3 class="uk-card-title"><span class="uk-label uk-text-large {{styles.rig}}">{{name}}</span></h3>
            <table class="uk-table uk-table-divider uk-table-small">
                <thead>
                  <tr>
                    <th>CS</th>
                    <th>coin</th>
                    <th>{{unit}}</th>
                    <th>SA</th>
                    <th>LN</th>
                  </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{cards}}</td>
                        <td>{{coin}}</td>
                        <td>{{hashrate}}</td>
                        <td>{{startedAt}}</td>
                        <td>{{lastSeen}}</td>
                    </tr>
                </tbody>
            </table>
            <hr>
            <table class="uk-table uk-table-divider uk-table-small">
                <thead>
                  <tr>
                    <th>i</th>
                    <th>temp</th>
                    <th>fan</th>
                    <th>u</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each gpus}}
                    <tr>
                        <td>{{index}}</td>
                        <td>
                          {{#gte temp 80}}
                          <span class="uk-text-danger">{{temp}}C</span>
                          {{else}}
                          {{#gte temp 70}}
                          <span class="uk-text-warning">{{temp}}C</span>
                          {{else}}
                          <span>{{temp}}C</span>
                          {{/gte}}
                          {{/gte}}
                        </td>
                        <td>
                          {{#gte fan 80}}
                          <span class="uk-text-danger">{{fan}}%</span>
                          {{else}}
                          {{#gte fan 70}}
                          <span class="uk-text-warning">{{fan}}%</span>
                          {{else}}
                          <span>{{fan}}%</span>
                          {{/gte}}
                          {{/gte}}
                        </td>
                        <td>{{util}}</td>
                    </tr>
                  {{/each}}
                </tbody>
            </table>
        </div>
    </div>
  {{/each}}
</div>
